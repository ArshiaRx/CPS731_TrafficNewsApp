<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Traffic News Web App</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>WebController</servlet-name>
        <servlet-class>com.trafficnewsapp.web.servlets.WebControllerServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>IncidentController</servlet-name>
        <servlet-class>com.trafficnewsapp.web.servlets.IncidentControllerServlet</servlet-class>
    </servlet>
    
    <!-- Map default servlet for static resources FIRST (before other mappings) -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.ico</url-pattern>
        <url-pattern>*.svg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>WebController</servlet-name>
        <url-pattern>/index</url-pattern>
        <url-pattern>/incidents</url-pattern>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>IncidentController</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/incidents/list</url-pattern>
    </servlet-mapping>
    
    <!-- Map root path last, but exclude static resources -->
    <servlet-mapping>
        <servlet-name>WebController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
</web-app>

